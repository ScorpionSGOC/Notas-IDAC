<!DOCTYPE html>
<html>
<head>
	<title>Formulario con bot√≥n</title>
</head>
<body>
	<form method="post" action="otra_interfaz.php">
		<label for="dato">Dato:</label>
		<input type="text" id="dato" name="dato"><br>

		<button type="submit" name="enviar">Enviar</button>
		<button onclick="window.location.href='otra_interfaz.php?dato='+encodeURIComponent(document.getElementById('dato').value)">Ir a otra interfaz con dato</button>
	</form>
</body>
</html>

///
<!DOCTYPE html>
<html>
<head>
	<title>Otra interfaz</title>
</head>
<body>
	<h1>Datos recibidos</h1>
	<?php
	if(isset($_POST['enviar'])){
		$dato = $_POST['dato'];
		echo "<p>El dato enviado por post es: " . $dato . "</p>";
	}

	if(isset($_GET['dato'])){
		$dato = $_GET['dato'];
		echo "<p>El dato enviado por get es: " . $dato . "</p>";
	}
	?>
</body>
</html>